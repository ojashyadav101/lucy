# ── Slack ──────────────────────────────────────────────────
LUCY_SLACK_BOT_TOKEN=xoxb-...
LUCY_SLACK_APP_TOKEN=xapp-...
LUCY_SLACK_SIGNING_SECRET=

# ── OpenClaw Gateway ──────────────────────────────────────
LUCY_OPENCLAW_BASE_URL=http://localhost:3000
LUCY_OPENCLAW_API_KEY=

# ── Database ──────────────────────────────────────────────
LUCY_DATABASE_URL=postgresql+asyncpg://lucy:lucy@localhost:5432/lucy
# For tests (separate database)
LUCY_TEST_DATABASE_URL=postgresql+asyncpg://lucy:lucy@localhost:5432/lucy_test

# ── Memory (Qdrant) ──────────────────────────────────────
LUCY_QDRANT_URL=http://localhost:6333
LUCY_QDRANT_API_KEY=

# ── Memory (Mem0) ─────────────────────────────────────────
LUCY_MEM0_API_KEY=

# ── Model Routing (LiteLLM) ──────────────────────────────
LUCY_LITELLM_BASE_URL=http://localhost:4000
LUCY_LITELLM_API_KEY=

# ── Composio Integrations ────────────────────────────────
LUCY_COMPOSIO_API_KEY=

# ── E2B Sandbox ───────────────────────────────────────────
LUCY_E2B_API_KEY=

# ── Security (LlamaFirewall) ─────────────────────────────
LUCY_LLAMAFIREWALL_ENABLED=true

# ── Observability (Langfuse) ─────────────────────────────
LUCY_LANGFUSE_PUBLIC_KEY=
LUCY_LANGFUSE_SECRET_KEY=
LUCY_LANGFUSE_HOST=https://cloud.langfuse.com

# ── Application ───────────────────────────────────────────
LUCY_LOG_LEVEL=INFO
LUCY_ENV=development
