{
  "display_information": {
    "name": "Lucy",
    "description": "AI coworker that executes real work â€” not just answers questions.",
    "background_color": "#1a1a2e",
    "long_description": "Lucy is your team's AI coworker. She writes code, manages integrations, monitors infrastructure, orchestrates multi-step workflows, and gets smarter over time. Add her to any channel and she'll start working."
  },
  "features": {
    "app_home": {
      "home_tab_enabled": true,
      "messages_tab_enabled": true
    },
    "bot_user": {
      "display_name": "Lucy",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/lucy",
        "description": "Talk to Lucy or run a command",
        "usage_hint": "[message | costs | costs breakdown | disconnect <service> | patterns | help]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "channels:join",
        "channels:read",
        "chat:write",
        "chat:write.public",
        "files:read",
        "groups:history",
        "groups:read",
        "im:history",
        "im:read",
        "im:write",
        "links:read",
        "mpim:history",
        "mpim:read",
        "reactions:read",
        "reactions:write",
        "team:read",
        "users:read",
        "users:read.email",
        "commands"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_home_opened",
        "app_mention",
        "channel_created",
        "member_joined_channel",
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim",
        "reaction_added"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
